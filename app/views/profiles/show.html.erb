<div class="container">
    <div class="profile_image">
        <%= image_tag  current_user.avatar_image %>
    </div>
    <div class="profile_name">
        <%= current_user.profile&.nickname %>
    </div>
    <%= link_to 'プロフィールを編集する', edit_profile_path %>

    <div class="profile_introduction">
        <%= current_user.profile&.introduction %>
    </div>

    <% current_user.articles.each do |article| %>
        <%= render 'commons/article', article: article %>
    <% end %>
</div>