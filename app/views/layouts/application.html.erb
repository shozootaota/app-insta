<!DOCTYPE html>
<html>
  <head>
    <title>AppInsta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <% if !current_page?(root_path) %>
        <%= link_to :back do %>
        <%= image_tag 'back.svg', class: 'navbar_back' %>
        <% end %>
        <% end %>
        <%= link_to 'Instagram', root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mb-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to 'Home', root_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to '投稿', new_article_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'プロフィール', profile_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'お気に入り', favorites_path, class: "nav-link" %>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, class: "nav-link", data: { method: 'delete' } %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to 'ログイン', new_user_session_path, class: "nav-link" %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <% if flash.present? %>
  <div class="flash">
    <% flash.each do |key, value| %>
    <div class="<%= key %>"><%= value %></div>
    <% end %>
  </div>
  <% end %>

    <%= yield %>
  </body>
</html>
